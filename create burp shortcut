function create_burp_shortcut
    set shortcut_path ~/Desktop/BurpSuitePro.desktop

    echo '[Desktop Entry]' > $shortcut_path
    echo 'Name=Burp Suite Pro (via Custom Java)' >> $shortcut_path
    echo 'Type=Application' >> $shortcut_path
    echo 'Categories=Development;' >> $shortcut_path
    echo 'Terminal=false' >> $shortcut_path
    echo 'Icon=/home/mehdi/Apps/burpsuite_pro_v2024.3.1/icon.png' >> $shortcut_path

    echo 'Exec="/opt/jdk-24.0.1/bin/java" --add-opens=java.desktop/javax.swing=ALL-UNNAMED --add-opens=java.base/java.lang=ALL-UNNAMED --add-opens=java.base/jdk.internal.org.objectweb.asm=ALL-UNNAMED --add-opens=java.base/jdk.internal.org.objectweb.asm.tree=ALL-UNNAMED --add-opens=java.base/jdk.internal.org.objectweb.asm.Opcodes=ALL-UNNAMED -javaagent:/home/mehdi/Apps/burpsuite_pro_v2024.3.1/burploader.jar -noverify -jar /home/mehdi/Apps/burpsuite_pro_v2024.3.1/burpsuite_pro_v2024.3.1.jar' >> $shortcut_path

    chmod +x $shortcut_path
    echo "Done: $shortcut_path"
end
